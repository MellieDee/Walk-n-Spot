                    <option value="30">Turtle</option>
                    <option value="31">Woodpecker</option>
                </select>
                <br>
                <button class="submitAnimal btn btn-primary">Submit</button> <br>         
            </div> <br>
            <h1>Saved Trails:</h1><br>
            <div class="">
                {{#each trailArray as |trail| }}
                {{> cards-dashboard trail }}
                {{/each}}
            </div>
        </div>
    </div>
</section>


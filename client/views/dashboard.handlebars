    <div class="album py-5 bg-light">
        <div class="container">
            <h1 >What Animals did you see?</h1>
            <div>
                <p>Trail:</p>
                <select name="trailSubmit" class="form-select" aria-label="Default select example">
                    <option value="1" id="1">American River Parkway Trailhead</option>
                    <option value="2" id="2">Sacramento River Parkway</option>
                    <option value="3" id="3">Riverfront Promenade</option>
                    <option value="4" id="4">Creekside Park & Nature Area</option>
                    <option value="5" id="5">Bannon Creek Park & Parkway</option>
                    <option value="6" id="6">Natomas Oaks Park</option>
                    <option value="7" id="7">Arcade Creek Park</option>
                    <option value="8" id="8">Charlie-Jensen Park</option>
                    <option value="9" id="9">Folsom Point State Park</option>
                    <option value="10" id="10">Nimbus Flat State Recreation Area</option>
                    <option value="11" id="11">Lake Clementine Trail</option>
                    <option value="12" id="12">Quarry Road Trail</option>
                    <option value="13" id="13">Auburn Trail Run</option>
                    <option value="14" id="14">Overlook Park</option>
                    <option value="15" id="15">Auburn Bike Park</option>
                    <option value="16" id="16">Bicentennial Park</option>
                </select> <br>
                <p>Animal:</p>
                <select name="animalSubmit" class="form-select" aria-label="Default select example">
                    <option value="All">Animals</option>
                    <option value="1" id="Bat">Bat</option>
                    <option value="2" id="Bear">Bear</option>
                    <option value="3" id="Beaver">Beaver</option>
                    <option value="4">Blue Herring</option>
                    <option value="5">Bluejay</option>
                    <option value="6">Bobcat</option>
                    <option value="7">Cow</option>
                    <option value="8">Coyote</option>
                    <option value="9">Crane</option>
                    <option value="10">Deer</option>
                    <option value="11">Dog</option>
                    <option value="12">Donkey</option>
                    <option value="13">Emu</option>
                    <option value="14">Fish</option>
                    <option value="15">Frog</option>
                    <option value="16">Hawk</option>
                    <option value="17">Horse</option>
                    <option value="18">Lizard</option>
                    <option value="19">Llama</option>
                    <option value="20">Mountain Lion</option> 
                    <option value="21">Opossum</option>
